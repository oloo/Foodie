<div class="row">    
   
<div class="span6">
<h2>Log in</h2>
<%= form_for(resource, :as => resource_name, :html => { :class => "form-horizontal"}, :url => session_path(resource_name)) do |f| %>

  <p><%= f.label :email %>
  <%= f.email_field :email, :placeholder=>"Email Address..." %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password, :placeholder=>"Password.." %></p>

  <% if devise_mapping.rememberable? -%>
    <p class="keeplogin"><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p class="login button"><%= f.submit "Login", :class =>'btn btn-green'%></p>
<% end %>
<p class="change_link">Not a member yet?
<%= render "devise/shared/links" %></p>
</div>

<div class="span6">
	<h2>Or use your other networks</h2>
	<br/>
<%= link_to( image_tag('flogin.png'), user_omniauth_authorize_path(:facebook) )%>
</div>
</div>