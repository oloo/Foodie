<div id="wrapper">
<div id="login_box" class="login_form">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<h2>Log in</h2>
  <p><%= f.label :email, :class => "uname" %><br />
  <%= f.email_field :email, :placeholder=>"Email Address..." %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, :placeholder=>"Password.." %></p>

  <% if devise_mapping.rememberable? -%>
    <p class="keeplogin"><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p class="login button"><%= f.submit "Login", :class =>'btn btn-green'%></p>
<% end %>
<p class="change_link">Not a member yet?
<%= render "devise/shared/links" %></p>
</div>
</div>